.value-item {
  display: inline-block;
  margin-left: 12px;
}

.value-selector {
  position: absolute;
  transform: scale(0);
}

.value-selector + label {
  position: relative;
  cursor: pointer;
  display: inline-block;
  font-size: 0.7rem;
  border-radius: 5px;
  padding: 0.1rem 0.5rem;
  background-color: white;
  color: black;
  margin-right: 0.6rem;
  margin-bottom: 20px;
  width: 200px;
  height: 165px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

}

.form-check-label img {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 200px;
  height: 100px;
  object-fit: cover;
  border-radius: 5px 5px 0 0;
}

.form-check-label h6 {
  position: absolute;
  top: 110px;
}

.form-check-label p {
  position: absolute;
  top: 127px;

}

.value-selector:checked + label {
  background-color: #6fb3b1;
  color: white;
}

.form-group.check_boxes.required.user_value_value {
  text-align: left;
}

.col-form-label {
  margin-bottom: 20px;
  text-align: left;
  font-weight: bold;
}

#btn-submit {
  background-color: #5EAAA8;
  color: white;
  padding: 10px 40px;
  font-weight: bold;
  font-size: 16px;
  border-radius: 2px;
  text-shadow: 0.5px 0.5px 1px rgba(0,0,0,0.2);
  box-shadow: 0.5px 0.5px 1px rgba(0,0,0,0.2);
  margin-left: 12px;
  width: 150px;
}

#btn-submit:hover {
  text-decoration: none;
  transition: 0.2s;
  background-color: #529c9a;
}

.value-selector-quiz {
  position: absolute;
  transform: scale(0);
}
.value-selector-quiz:checked + label {
  background-color: #6fb3b1;
  color: white;
}

.value-selector-quiz + label {
  position: relative;
  cursor: pointer;
  display: inline-block;
  font-size: 0.7rem;
  border-radius: 5px;
  padding: 0.1rem 0.5rem;
  background-color: white;
  color: black;
  margin-right: 0.6rem;
  margin-bottom: 20px;
  width: 350px;
  height: 270px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

}

.form-check-label.collection_radio_buttons img {
  width:350px;
  height: 200px;
}

#h6-quiz {
  position: absolute;
  top: 210px;
  padding-left: 2px;
  font-size: 18px;
}

#p-quiz {
  position: absolute;
  top: 227px;
  font-size: 14px;
  padding-left: 2px;
  text-align: left;
}

.form-group.radio_buttons.required.user_value_value {
  text-align: center;
}

#value-test {
  margin-top: 20px;
}

.value-item-quiz {
  display: inline-block;
  margin-left: 12px;
  margin-top: 40px;
}
