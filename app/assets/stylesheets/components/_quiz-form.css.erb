.value-item {
  display: inline-block;
}

.value-selector {
  position: absolute;
  transform: scale(0);
}

.value-selector + label {
  position: relative;
  cursor: pointer;
  display: inline-block;
  font-size: 0.7rem;
  border-radius: 5px;
  padding: 0.1rem 0.5rem;
  background-color: white;
  color: black;
  margin-right: 0.6rem;
  margin-bottom: 0.4rem;
  width: 200px;
  height: 165px;
  box-shadow: 1px 0.5px 0.5px 1px rgba(0,0,0,0.2);

}

.form-check-label img {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 200px;
  height: 100px;
  object-fit: cover;
  border-radius: 5px 5px 0 0;
}

.form-check-label h6 {
  position: absolute;
  top: 110px;
}

.form-check-label p {
  position: absolute;
  top: 127px;

}

.value-selector:checked + label {
  background-color: #6fb3b1;
  color: white;
}
