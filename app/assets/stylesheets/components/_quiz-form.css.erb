.value-item {
  display: inline-block;
}

.value-selector {
  position: absolute;
  transform: scale(0);
}

.value-selector + label {
  position: relative;
  cursor: pointer;
  display: inline-block;
  font-size: 0.7rem;
  border-radius: 5px;
  padding: 0.1rem 0.5rem;
  background-color: white;
  color: #6fb3b1;
  border: 1px solid #6fb3b1;
  margin-right: 0.6rem;
  margin-bottom: 0.4rem;
  width: 200px;
  height: 150px;
}

.form-check-label img {
  position: absolute;
  left: 25px;
  width: 150px;
  height: 100px;
}

.form-check-label h6 {
  position: absolute;


}

.form-check-label p {
  position: absolute;

}

.value-selector:checked + label {
  background-color: #6fb3b1;
  color: white;
}
