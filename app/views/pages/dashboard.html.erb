<div class="container">


  <div class="card-profile">
    <div class="card-title">
      <% if current_user.avatar.attached? %>
      <div class="avatar-big" style="background-image: url(<%= cl_image_path current_user.avatar.key %>)">
      <% else %>
      <div class="avatar-big" style="background-image: url('https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png')">
      <% end %>
      </div>
    </div>
    <div class="card-basic-info">
      <h2> <%= current_user.first_name %> </h2>
      <h5>ğŸ“ <%= current_user.location %></h5>
    </div>
    <div class="card-my-values">
      <h3>My Core Values </h3>
      <% current_user.core_values.each do |core| %>
        <% value = Value.find(UserValue.find(core).value_id) %>
        <p><%= value.name %></p>
      <% end %>
    </div>
  </div>

  <h2>About Me...</h2>
  <div class="card-about d-flex">
    <div class="card-personality">
      <h3>My Personality</h3>
      <div class="personality-test d-flex">
        <img src="https://i.pinimg.com/originals/52/29/8d/52298d48c02c395a6039b85fad91228d.png">
        <h5>ESFP-A</h5>
      </div>
    </div>
    <div class="card-interest">
      <h3>My Interests</h3>
      <h1>ğŸ£ ğŸ¦† ğŸ¥ª</h1>
      <% current_user.interests.each do |interest| %>
       <p><%= interest.name %></p>
       <% end %>
    </div>
    <div class="card-more">
      <h3>Add More</h3>
      <p>+</p>
    </div>
  </div>

  <h2>Booked Events</h2>
  <% current_user.events.each do |event| %>
  <div class="card-bookings d-flex">
    <div class="card-event">
      <h3><%= link_to event.location, event_path(event) %></h3>
      <p><%=event.date.to_time.strftime('%B %e at %l:%M %p') %></p>
    </div>
    <% end %>
      <div class="card-more-events">
      <h3>Add More</h3>
      <p>+</p>
    </div>
  </div>

</div>
