
<div class="container">

<!-- profile card -->
  <div>
    <div class="d-flex profile-card">
      <% if current_user.avatar.attached? %>
        <div class="avatar-big" style="background-image: url(<%= cl_image_path current_user.avatar.key %>)"></div>
      <% else %>
        <div class="avatar-big" style="background-image: url('https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png')"></div>
      <% end %>
      <div class="name-interests justify-content-center">
        <div style="font-size: 20px;">
          <strong>
            <%= current_user.first_name %>,
            <%= ((Time.zone.now - current_user.birthday.to_time) /1.year.seconds).floor %>
          </strong>
        </div>
        <div>
          <%= current_user.location %> üìç
        </div>
        <div>
          <% current_user.user_interests.each do |user_interest| %>
              <% test = Interest.find(user_interest.interest_id)%>
              <%= test.name %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
