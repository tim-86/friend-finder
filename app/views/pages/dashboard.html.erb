
<div class="container">

<!-- profile card -->
  <div class="row">
    <div class="col">
      <% if current_user.avatar.attached? %>
         <div class="avatar-big" style="background-image: url(<%= cl_image_path current_user.avatar.key %>)"></div>
      <% else %>
         <div class="avatar-big" style="background-image: url('https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png')">
       <% end %>
    </div>
  </div>
</div>
