<div class="container ">
  <div class="form-box justify-content-center">
    <div class="login-container">
      <div class="login-title">
        <h1 style="margin:0">Log In</h1>
      </div>
      <div class ="login-box">


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: false,
                        placeholder: "Email",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: false,
                        placeholder: "Password",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), id: "password-link" %><br />
          <% end %>
          <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn-login-form" %>
          </div>
          <p style="color: #888888; font-size: 14px; text-align: center; margin-bottom: 0;">Don't have an account?</p>
        <% end %>
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "SIGN UP NOW", new_registration_path(resource_name), class:"sign-up-link" %><br />
        <% end %>

      </div>
    </div>

  </div>
</div>
