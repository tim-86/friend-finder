<div class = "show-page-banner" style="background-image: url(<%= cl_image_path @events[0].photo.key %> )">
<h1 class= "location-header"><%= @events[0].location.upcase %> </h1>
</div>

<div class= "container">
  <h2 id ="header-spacer">Upcoming Friend Finder Events In Your Area</h2>
  <div class= "events-container">


    <% @events.each do |event| %>

      <% if event.date > DateTime.current %>
       <div class= "event-card align-items-center">
        <div class= "event-card-date">
         <h3><%= event.date.to_time.strftime('%B %e at %l:%M %p') %></h3>
        </div>
         <div>
           <p class= "event-card-description"><%= event.description %></p>
           <div class = "d-flex align-items-center">
             <i class="fas fa-user"></i>
             <p class= "max-participants"><strong>max. <%= event.max_participants %></strong></p>
           </div>

         </div>
         <div>
         <p class="event-card-price"><%= event.price %> â‚¬</p>
         <% if event.users.count >= event.max_participants %>
           <p class="event-card-status-booked">Fully booked</p>
         <% else %>
           <p class = "event-card-status">
            <%= event.max_participants - event.users.count %> Spots left!</p>
<!--            <%= link_to "Show Event", event_path(event), class: "btn-red event-card-button" %>
 -->         <% end %>
         </div>

      </div>
    <% end %>
  <% end %>
 </div>
</div>
